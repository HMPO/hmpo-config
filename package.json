{
  "name": "hmpo-config",
  "version": "3.0.0",
  "description": "Config loader",
  "main": "./lib/config.js",
  "scripts": {
    "test": "npm run test:unit",
    "pretest": "npm run test:lint",
    "posttest": "npm run test:coverage && npm audit --production",
    "test:unit": "nyc --reporter=lcov --reporter=text-summary mocha ./test/unit --recursive --require ./test/unit/helper",
    "test:coverage": "nyc check-coverage",
    "test:lint": "eslint .",
    "prepare": "husky install"
  },
  "author": "HMPO",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "app-root-path": "^3.1.0",
    "debug": "^4.3.6",
    "deep-clone-merge": "^1.5.5",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "mocha": "^10.7.0",
    "nyc": "^17.0.0",
    "sinon": "^18.0.0",
    "sinon-chai": "^3.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HMPO/hmpo-config.git"
  },
  "keywords": [
    "hmpo",
    "config"
  ],
  "bugs": {
    "url": "https://github.com/HMPO/hmpo-config/issues"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "coverage/**",
      "test/**"
    ],
    "lines": 100,
    "branches": 100,
    "functions": 100,
    "statements": 100
  }
}
