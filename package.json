{
  "name": "hmpo-config",
  "version": "4.0.1",
  "description": "Config loader",
  "main": "./lib/config.js",
  "scripts": {
    "test": "npm run test:unit",
    "pretest": "npm run test:lint",
    "posttest": "npm run test:coverage && npm audit --production",
    "test:unit": "nyc --reporter=lcov --reporter=text-summary mocha ./test/unit --recursive --require ./test/unit/helper",
    "test:coverage": "nyc check-coverage",
    "test:lint": "eslint .",
    "prepare": "husky",
    "documentation": "documentation build lib/config.js -f md -o API_DOCS.md"
  },
  "author": "HMPO",
  "license": "MIT",
  "engines": {
    "node": "20.x || 22.x"
  },
  "dependencies": {
    "app-root-path": "^3.1.0",
    "debug": "^4.3.7",
    "deep-clone-merge": "^1.5.5",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "documentation": "^14.0.3",
    "eslint": "^9.12.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "mocha": "^10.7.3",
    "nyc": "^17.1.0",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HMPO/hmpo-config.git"
  },
  "keywords": [
    "hmpo",
    "config"
  ],
  "bugs": {
    "url": "https://github.com/HMPO/hmpo-config/issues"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "coverage/**",
      "test/**",
      "eslint.config.js"
    ],
    "lines": 100,
    "branches": 100,
    "functions": 100,
    "statements": 100
  }
}